<h1 class="page-title">Top refactrers</h1>
<div class="row">
  <div class="span4">
    <h2 class="users-title">Highest Rated</h2>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Score</th>
        </tr>
      </thead>
      <tbody>
      <% @users_by_score.each_with_index do |user, i| %>
        <tr>
          <td><%= i + 1 %></td>
          <td><%= link_to user.display_name, user_path(user) %></td>
          <td><%= user.score %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

  <div class="span4">
    <h2 class="users-title">Most Problems</h2>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Problems</th>
        </tr>
      </thead>
      <tbody>
      <% @users_by_problems.each_with_index do |user, i| %>
        <tr>
          <td><%= i + 1 %></td>
          <td><%= link_to user.display_name, user_path(user) %></td>
          <td><%= user.problems_count %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

  <div class="span4">
    <h2 class="users-title">Most Solutions</h2>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Solutions</th>
        </tr>
      </thead>
      <tbody>
      <% @users_by_solutions.each_with_index do |user, i| %>
        <tr>
          <td><%= i + 1 %></td>
          <td><%= link_to user.display_name, user_path(user) %></td>
          <td><%= user.solutions_count %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
